<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="6dp">

    <FrameLayout
        android:id="@+id/takePictureAutoBtn"
        android:layout_width="@dimen/take_picture_size"
        android:layout_height="@dimen/take_picture_size"
        android:background="@drawable/take_picture_bg"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/take_picture_auto_outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ui_scan_ico_progress_outer" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/take_picture_auto_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ui_scan_ico_progress_inner" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/takePictureManualBtn"
        android:layout_width="@dimen/take_picture_size"
        android:layout_height="@dimen/take_picture_size"
        android:background="@drawable/take_picture_bg"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/take_picture_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:tint="@color/ui_scanning_manual_tint"
            app:srcCompat="@drawable/ui_scanning_manual" />

    </FrameLayout>
</FrameLayout>